nota1= float(input("Digite a nota 1:"))
nota2=float(input("Digite a nota 2:"))
nota3=float(input("Digite a nota 3:"))
nota4=float(input("Digite a nota 4:"))
media=(nota1+nota2+nota3+nota4)
print(f" A media das notas é: {media}")
#calcular médias


#Converter metros em centimetros
metros=float(input("Digite quantos metros:"))
cm=( metros * 100)
print(f"São {cm} em cm")

#soma de dois numeros
numero1=float(input("Digite um numero:"))
numero2= float(input("Digite um numero:"))
soma= numero1+numero2
print(f" A soma é: {soma}")


#resto da divisão de dois numeros inteiros
numero1=float(input("Digite um número inteiro:"))
numero2=float(input("Digite um número inteiro:"))
divisão= numero1//numero2
print(f" O resultado da divisão é: {divisão}")


               


               



